<br>

<div id="contets_box">
  <ul>
    <% @pictures.each do |picture| %>
    <div class="contet_box">
      <li>
        <dt><%= picture.user.name %>さんの投稿</dt>
        <br>
        <dd><%= picture.content %></dd>
        <br>
        <dd><%= image_tag(picture.image.url) if picture.image.url %></dd>
        <br>
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to '投稿内容を編集する', edit_picture_path(picture) if picture.user_id == current_user.id %></li>
            <li><%= link_to '投稿内容を削除する', picture, method: :delete, data: { confirm: '本当に投稿を削除しますか？' } if picture.user_id == current_user.id %></li>
          </ul>
        </div>
      </li>
    </div>
    <% end %>
  </ul>
</div>


<div class="inner">
  <%= link_to '新規投稿する', new_picture_path %>
</div>